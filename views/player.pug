html
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/favicon.ico")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
    title KF1 Stats
    link(rel="stylesheet" href="../styles/player.css")
  body
    h1=player + "'s Killing Floor Stats"
    hr
    section.perks
      h2 Perk Progress
      hr
      div
        div.perk__img
          img(src="../images/perks/Perk_Medic.png" alt="Perk Field Medic")
        div.perk__info
          div.perk__header
            span.perk__name Field Medic
            span.perk__level="Level " + medicLevel
          div.perk__content
            div.perk__bar
              div.perk__progress(style={width:medicProgress+"%"})
              div.perk__tooltip(style={right:100-medicProgress+"%"})=medicProgress+"%"
            p.perk__points="Points Healed: " + medicPoints
      div
